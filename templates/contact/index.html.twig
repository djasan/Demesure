{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="grid-container">
        <div class="grid">
            <img src="{{ asset('/assets/img/fer-acajou.svg') }}" alt="Your Image">
        </div>
        <form class="grid" method="post" action="{{ path('contact') }}">
            {{ form_start(form) }}
            
            <div class="name">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            
            <div class="email">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            
            <div class="message">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
            </div>
            
            <div class="submit">
                {{ form_widget(form.submit) }}
            </div>
            
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}

<!-- templates/home/index.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
  <div class="home-container">
    <div class="section">
      <h2>Bienvenue sur notre site</h2>
      <p> Découvrez notre collection unique...</p>
      <img src="{{ asset('path/to/welcome-image.jpg') }}" alt="Welcome Image">
    </div>

    <div class="section">
      <h2>Notre Histoire</h2>
      <p>Découvrez l'histoire de notre créatrice...</p>
      <img src="{{ asset('path/to/story-image.jpg') }}" alt="Story Image">
    </div>

    <div class="cta">
      <a href="{{ path('contact') }}">Contactez-nous</a>
    </div>
  </div>
{% endblock %}
